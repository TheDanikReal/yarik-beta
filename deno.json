{
    "lock": false,
    "tasks": {
        "start": "deno run --allow-env --allow-read=.env,prisma/ --allow-net --allow-sys=hostname index.ts"
    },
    "fmt": {
        "lineWidth": 100,
        "singleQuote": false,
        "indentWidth": 4,
        "useTabs": false,
        "semiColons": false,
        "trailingCommas": "never"
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "include": ["camelcase"],
            "exclude": ["require-await"]
        }
    },
    "compilerOptions": {
        "lib": [
            "ES2024"
        ],
        "verbatimModuleSyntax": true
    },
    "unstable": [
        "sloppy-imports"
    ],
    "nodeModulesDir": "auto"
}

{
    "lock": false,
    "tasks": {
        "start": "deno run --allow-env --allow-read=.env,prisma/ --allow-net --allow-sys=hostname src/index.ts",
        "build": "deno run --allow-env --allow-run --allow-read=bundle.cjs --allow-write=bundle.cjs build.ts",
        "build:rolldown": "deno run --allow-env --allow-ffi --allow-read npm:rolldown -c rolldown.config.mjs",
        "deploy": "deno run --allow-env --allow-ffi --allow-read --allow-sys=hostname src/deploy.ts"
    },
    "fmt": {
        "lineWidth": 100,
        "singleQuote": false,
        "indentWidth": 4,
        "useTabs": false,
        "semiColons": false,
        "trailingCommas": "never"
    },
    "lint": {
        "rules": {
            "tags": ["recommended"],
            "include": ["camelcase", "no-slow-types"],
            "exclude": ["require-await"]
        }
    },
    "compilerOptions": {
        "lib": [
            "ES2024"
        ],
        "verbatimModuleSyntax": true
    },
    "unstable": [
        "sloppy-imports"
    ],
    "nodeModulesDir": "auto"
}

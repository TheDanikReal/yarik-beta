{
    "compilerOptions": {
        "target": "ES2024",
        "lib": ["ES2024"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,
        "strict": true,
        "outDir": "dist/",
        "verbatimModuleSyntax": true

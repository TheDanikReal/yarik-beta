// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      String     @id @unique
  model   String?
}

model Channel {
  id      String     @id @unique
  enabled Boolean
}

model companies {
  id        String     @id @unique
  name      String
  location  String
  phone     String
  plans     plan[]
}

model plan {
  id        Int        @id @default(autoincrement())
  companyId String
  company   companies? @relation(fields: [companyId], references: [id])
  date      DateTime
  item      Int?
  value     Int?
  amount    BigInt?
}